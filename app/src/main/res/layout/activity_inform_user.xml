<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apoorva.trainingapp.informUser"
    android:orientation="vertical"
    android:background="@drawable/grad">

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f5deb3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="STEP ONE"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f5deb3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inform1"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="9dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="7dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Read instructions"
        android:id="@+id/read_instructions"
        android:layout_marginTop="9dp"
        android:background="@drawable/back"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f5deb3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:textSize="20dp"
        android:text="STEP TWO"
        android:textColor="#000000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f5deb3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inform2"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SIGN IN"
        android:background="@drawable/back"
        android:id="@+id/signup1"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/back"
        android:text="Log in"
        android:id="@+id/login1"
        android:layout_marginTop="10dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f5deb3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="STEP THREE"
        android:textSize="20dp"
        android:textColor="#795548"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f5deb3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inform3"
        android:textColor="#000000"
        android:textSize="18sp"/>


</LinearLayout>
